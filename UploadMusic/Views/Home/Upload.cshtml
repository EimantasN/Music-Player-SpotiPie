
@{
    ViewData["Title"] = "Upload";
}
<div class="row">
    <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="Upload">
        <div class="form-group">
            <div class="col-md-10">
                <p>Choose song:</p>
                <input type="file" name="files" id="files" multiple />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Upload" />
            </div>
        </div>
    </form>
    <div>
        <b>@ViewBag.Message</b>
    </div>
</div>
